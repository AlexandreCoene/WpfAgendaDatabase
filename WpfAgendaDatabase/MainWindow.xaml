<Window x:Class="WpfAgendaDatabase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAgendaDatabase"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Titre -->
            <TextBlock Text="Titre ici" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <!-- Boutons pour changer la vue -->
            <Button Content="Accueil" Grid.Row="1" Margin="10" Click="BtnAccueil_Click"/>
            <Button Content="Calendrier" Grid.Row="2" Margin="10" Click="BtnCalendrier_Click"/>
            <Button Content="Contact" Grid.Row="3" Margin="10" Click="BtnContact_Click"/>
            <Button Content="Gestion" Grid.Row="4" Margin="10" Click="BtnGestion_Click"/>
            <!-- Vous pouvez ajouter plus de boutons si nécessaire -->
        </Grid>

        <!-- Conteneur Droit (Vide), qui va contenir les vues -->
        <ContentControl x:Name="MainContent" Grid.Column="1" Background="#EEE"/>
    </Grid>
</Window>
