<UserControl x:Class="WpfAgendaDatabase.View.ViewAjouter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAgendaDatabase.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel>
            <Label Content="Nom" Margin="5"/>
            <TextBox x:Name="txtNom" Margin="5" ToolTip="Entrez le nom"/>
            <Label Content="Prénom" Margin="5"/>
            <TextBox x:Name="txtPrenom" Margin="5" ToolTip="Entrez le prénom"/>
            <Label Content="Numéro de téléphone" Margin="5"/>
            <TextBox x:Name="txtNumero" Margin="5" ToolTip="Entrez le numéro de téléphone"/>
            <Label Content="Email" Margin="5"/>
            <TextBox x:Name="txtEmail" Margin="5" ToolTip="Entrez l'email"/>
            <Button Content="Ajouter" Click="Ajouter_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>
